name: Test

on: [push]

jobs:
  run_script:
    runs-on: ubuntu-latest
    timeout-minutes: 2
    steps:
      - name: run test script
        uses: appleboy/ssh-action@v1.0.3
        with:
          host: ${{ secrets.HOST }}
          username: ${{ secrets.USERNAME }}
          key: ${{ secrets.KEY }}
          port: ${{ secrets.PORT }}
          script: ./test.sh
